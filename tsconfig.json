{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"app/*": ["./app/*"],
			"config/*": ["./config/*"],
			"auth/*": ["./auth/*"],
			"actions/*": ["./actions/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".storybook/PageHeader.tsx",
		"app/components/stories/.stories.tsx",
		"app/components"
, "app/wip/page-header"	],
	"exclude": ["node_modules"]
}
